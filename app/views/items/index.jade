doctype html
html
  head
    meta(charset='utf-8')
    title eCommerce
    link(rel='stylesheet', href='/css/style.css')
  body
    h1 eCommerce
    nav
      ul
        li: a(href='/') Home
        li: a(href='/about') About
        li: a(href='/faq') Faq
        li: a(href='/items/new') Add Items

    table
      th name
      th Length
      th width
      th height
      th weight
      th color
      th quantity
      th MSRP
      th percent off
      th cost
        each item in items
          tr
            td
              ul
                a(href='/items/#{item._id.toString()}')= item.name
            td= item.dimensions.l
            td= item.dimensions.w
            td= item.dimensions.h
            td= item.weight
            td(style='background-color:#{item.color};')= item.color
            td= item.quantity
            td= item.msrp
            td= item.percentOff
            td= item.cost()

